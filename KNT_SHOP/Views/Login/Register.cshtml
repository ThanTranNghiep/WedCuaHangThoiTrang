@using KNT_SHOP.Models
@using KNT_SHOP.Models.ViewModel
@model KNT_SHOP.Models.ViewModel.GenderAccount
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--=============== REMIXICONS ===============-->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="../../Content/css/login.css">

    <!--=============== FONTAWESOME ICONS ===============-->
    <script src="https://kit.fontawesome.com/5e1dfe1c35.js" crossorigin="anonymous"></script>

    <title>Register to KNT shop</title>
</head>

<body>
<div class="container">
    <img src="../../Content/img/pexels-photo.jpeg" alt="" class="login_img">
    <div class="login_content">
        <form method="post" class="login_form">
            <div>
                <h2 class="login_title">
                    Welcome to <span>KNT Shop</span>
                </h2>
                <p>@ViewBag.Message</p>
            </div>
            <div>
                <div class="login_inputs">
                    <div>
                        <label for="" class="login_label">Username</label>
                        @Html.TextBox("Username","", new { @id = "Username", @class = "login_input", @placeholder = "Username"})
                    </div>
                    <div>
                        <label for="" class="login_label">Email:</label>
                        @Html.TextBox("Email", "", new { @id = "Email", @class = "login_input", @placeholder = "Email"})
                    </div>
                    <div>
                        <label for="" class="login_label">Giới tính:</label>
                        @Html.DropDownListFor(@model=>@model.Gender, new SelectList(Enum.GetValues(typeof(Gender))),"",new {@id = "dropListGender", @class = "login_input form-control"})
                    </div>
                    <div>
                        <label for="" class="login_label">Password</label>
                        <div class="login_box">
                            @Html.Password("Password", "", new { @id = "input-pass", @class = "login_input", @placeholder = "Password"})
                            <i class="ri-eye-off-line login-eye" id="input-icon"></i>
                        </div>
                    </div>
                    <div>
                        <label for="" class="login_label">Confirm password:</label>
                        <div class="login_box">
                            @Html.Password("Confirm Password", "", new { @id = "input-confirm-pass", @class = "login_input", @placeholder = "Confirm password"})
                            <i class="ri-eye-off-line login-eye" id="input-icon-confirm"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div class="login_buttons">
                    <button type="button" formmethod="post" id="btn-signup" class="login_button" onclick="Register()">SignUp</button>
                    <button type="submit" id="btn-cancel" class="login_button login_button-ghost" formaction="Index">Cancel</button>
                </div>
            </div>

        </form>
    </div>
    <!--=============== LOGIN JS ===============-->
    <script src="../../Content/js/login.js"></script>
</div>
<script src="~/Content/js/Register.js"></script>
</body>

</html>